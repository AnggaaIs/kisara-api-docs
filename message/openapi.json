{
  "openapi": "3.0.0",
  "info": {
    "title": "Message API",
    "version": "1.0.0"
  },
  "paths": {
    "/message/{link_id}": {
      "post": {
        "summary": "Create new message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MessageBodyPost"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "link_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Message posted successfully"
          },
          "404": {
            "$ref": "#/components/responses/UserNotFound"
          }
        }
      },
      "get": {
        "summary": "Get messages by user link_id",
        "parameters": [
          {
            "name": "link_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"]
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Comments retrieved successfully"
          },
          "404": {
            "$ref": "#/components/responses/UserNotFound"
          }
        }
      }
    },
    "/message/{link_id}/{message_id}": {
      "get": {
        "summary": "Get replies to a message",
        "parameters": [
          {
            "name": "link_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "message_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "sortBy",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"]
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Replies retrieved successfully"
          },
          "404": {
            "$ref": "#/components/responses/UserOrMessageNotFound"
          }
        }
      },
      "post": {
        "summary": "Reply to a message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MessageBodyPost" }
            }
          }
        },
        "parameters": [
          {
            "name": "link_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "message_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "201": {
            "description": "Reply posted successfully"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/UserOrMessageNotFound"
          }
        }
      },
      "delete": {
        "summary": "Delete a message",
        "parameters": [
          {
            "name": "link_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "message_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Message deleted successfully"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/UserOrMessageNotFound"
          }
        }
      }
    },
    "/message/{link_id}/{message_id}/{reply_id}": {
      "delete": {
        "summary": "Delete a reply",
        "parameters": [
          { "name": "link_id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "message_id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "reply_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Reply deleted successfully" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/UserOrReplyNotFound" }
        }
      }
    },
    "/message/{link_id}/{message_id}/like": {
      "put": {
        "summary": "Like or unlike a message",
        "parameters": [
          { "name": "link_id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "message_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Like status updated successfully" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/UserOrMessageNotFound" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MessageBodyPost": {
        "type": "object",
        "properties": {
          "message_content": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["message_content"]
      }
    },
    "responses": {
      "UserNotFound": {
        "description": "User not found"
      },
      "UserOrMessageNotFound": {
        "description": "User or message not found"
      },
      "UserOrReplyNotFound": {
        "description": "User or reply not found"
      },
      "Unauthorized": {
        "description": "User not authorized"
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
